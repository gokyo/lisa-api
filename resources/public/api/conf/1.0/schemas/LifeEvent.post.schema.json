{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties":
	{
		"accountId" : {
          "description": "The financial organisation’s own unique reference number for the investor’s LISA account.",
          "$ref": "#/definitions/IDType"},
		"lisaManagerReferenceNumber" : {
		  "description": "The number issued to the provider when they register with HMRC for LISA.",
		  "$ref": "#/definitions/LISAManagerReferenceNumberType"},
        "eventType" : {
          "description": "The event that has occurred and triggers eligibility for the bonus payment.",
          "$ref": "#/definitions/eventType"},
		"eventDate" : {
          "description": "The date the life event occurred.",
          "$ref": "#/definitions/ISO8601-Date"}
	},
	"required": [
		"accountId",
		"lisaManagerReferenceNumber",
		"eventType",
		"eventDate"
	],
	"additionalProperties": false,
	"definitions":
	{
		"ISO8601-Date" : {
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}$"
		},
		"IDType": {
			"type": "string",
			"pattern": "^\\d{10}$"
		},
		"LISAManagerReferenceNumberType" : {
			"type" : "string",
			"pattern": "^Z\\d{6}$"
		},

		"eventType" : {
			"type" : "string",
			"enum": ["LISA Investor Terminal Ill Health", "LISA Investor Death", "House Purchase"]
		}
	}
}
