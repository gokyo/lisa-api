{
	"$schema": "http://json-schema.org/draft-04/schema",
	"type": "object",
	"properties":
	{
		"investorNINO": {
          "description": "The investor’s National Insurance number.",
          "$ref" : "#/definitions/NINOType"},
		"firstName" : {
          "description": "The investor’s first name.",
          "type" : "string",
          "pattern": "^.{1,35}$",
		  "example": "FirstNameMe"
        },
		"lastName" : {
          "description": "The investor’s last name.",
          "type" : "string",
          "pattern": "^.{1,35}$",
          "example": "lastNameDough"
        },
		"DoB": {
          "description": "The investor’s date of birth.",
          "$ref": "#/definitions/ISO8601-Date"}
	},
	"required": ["investorNINO","firstName","lastName","DoB"],
	"additionalProperties": false,
	"definitions":
	{
		"ISO8601-Date" :
		{
          "id": "full-date",
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}$",
             "example": "1989-04-22"
		},
		"NINOType": {
          "type": "string",
          "pattern": "^[A-Z]{2}\\d{6}[A-D]$",
          "example": "AB123456D"
        }
	}
}
